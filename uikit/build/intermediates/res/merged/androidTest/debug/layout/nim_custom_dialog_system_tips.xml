<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_15"
    android:paddingRight="@dimen/dp_25"
    android:paddingBottom="@dimen/dp_15"
    android:orientation="vertical"
    android:background="@drawable/shape_app_comfirm_normal_7r_white"
    >


    <TextView
        android:id="@+id/min_custom_dialog_tips_desc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:text="确定移出群聊吗？"
        android:gravity="center"
        android:background="@null"
        android:visibility="gone"
        android:textColor="#333333"
        android:textSize="@dimen/sp_16"
        />


    <LinearLayout
        android:id="@+id/min_custom_dialog_edit_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginBottom="@dimen/dp_40">

        <TextView
            android:id="@+id/min_custom_dialog_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改群名称"/>

        <EditText
            android:id="@+id/min_custom_dialog_edit_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:background="@drawable/nim_edit_bg"
            android:layout_marginTop="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10">

        <Button
            android:id="@+id/min_custom_dialog_cancle_bt"
            android:layout_width="@dimen/dp_117"
            android:layout_height="@dimen/dp_43"
            android:text="取消"
            android:background="@drawable/shape_app_cacal_normal_7r"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/dp_30"
            android:textSize="@dimen/sp_19"
            />


        <Button
            android:id="@+id/min_custom_dialog_ok_bt"
            android:layout_width="@dimen/dp_117"
            android:layout_height="@dimen/dp_43"
            android:text="确定"
            android:background="@drawable/shape_app_comfirm_normal_7r"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_19"/>
    </LinearLayout>








</LinearLayout>
