<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_80">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_79"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="@dimen/dp_54"
            android:layout_height="@dimen/dp_54"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_gravity="center_vertical">
            <ImageView
                android:id="@+id/news_friends_message_touxiang"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_36"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/new_avatar_touxiang1_default"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/news_friends_message_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="程奕迅"
                        android:textColor="@color/main_title_text_color"
                        android:textSize="@dimen/sp_18"
                        />
                    <TextView
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_12"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:text="爵少府伯"
                        android:textSize="@dimen/sp_8"
                        android:textColor="@color/white"
                        android:background="@drawable/shape_deepgray_no_2r"
                        android:layout_toRightOf="@+id/news_friends_message_name"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="刚刚"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/main_hit_text_color"
                        android:layout_marginRight="@dimen/dp_15"
                        android:layout_alignParentRight="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="十年之前,我不认识你,你不属于我..."
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/main_assist_text_color"/>
                    <TextView
                        android:layout_width="@dimen/dp_20"
                        android:layout_height="@dimen/dp_20"
                        android:layout_alignParentRight="true"
                        android:text="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_14"
                        android:layout_marginRight="@dimen/dp_15"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:background="@drawable/circle_red"
                        />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/main_line_color"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"></View>
</LinearLayout>