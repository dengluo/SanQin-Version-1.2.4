<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:text="请选择籍贯"
        android:textColor="@color/main_assist_text_color"
        android:textSize="@dimen/sp_16"
        android:paddingLeft="@dimen/dp_15"
        android:gravity="center_vertical"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/main_line_color"></View>
    <RelativeLayout
        android:id="@+id/descent_layout"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:id="@+id/tv_area_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="所在地区"
            android:textColor="@color/main_title_text_color"
            android:textSize="@dimen/sp_19"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"/>
        <TextView
            android:id="@+id/descent_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_area_label"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_8"
            android:text="请选择"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/main_assist_text_color"
            android:textSize="@dimen/sp_16"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/main_line_color"></View>
    <Button
        android:id="@+id/descent_bt"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center_horizontal"
        style="?android:attr/borderlessButtonStyle"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_19"
        android:layout_marginTop="@dimen/dp_80"
        android:background="@drawable/selector_app_comfirm"/>
</LinearLayout>