<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/news_setting_number_layout"
        android:background="@drawable/shape_white_gray_2r"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/main_line_color"></View>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.pbids.sanqin.ui.view.CircleImageView
                android:scaleType="fitXY"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginLeft="@dimen/sp_15"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@drawable/me_avatar_moren_default"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/number_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="马上到"
                    android:textSize="@dimen/sp_17"
                    android:textColor="@color/main_title_text_color"/>
                <TextView
                    android:id="@+id/number_autograph"
                    android:layout_width="@dimen/dp_220"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="马上到"
                    android:textSize="@dimen/sp_15"
                    android:textColor="@color/main_assist_text_color"/>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/main_line_color"></View>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/news_recommend_layout"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐给好友"
            android:textSize="@dimen/sp_17"
            android:textColor="@color/main_title_text_color"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15" />

        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/me_button_xiayiye_default" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/main_line_color"
            android:layout_alignParentTop="true"></View>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/main_line_color"
            android:layout_alignParentBottom="true"></View>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/news_history_layout"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="聊天历史"
            android:textSize="@dimen/sp_17"
            android:textColor="@color/main_title_text_color"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15" />

        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/me_button_xiayiye_default" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/main_line_color"
            android:layout_alignParentTop="true"></View>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/main_line_color"
            android:layout_alignParentBottom="true"></View>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/news_shield_layout"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="屏蔽"
            android:textSize="@dimen/sp_17"
            android:textColor="@color/main_title_text_color"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/main_line_color"
            android:layout_alignParentTop="true"></View>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/main_line_color"
            android:layout_alignParentBottom="true"></View>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/news_clear_layout"
        android:background="@color/white"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="清空聊天记录"
            android:textSize="@dimen/sp_17"
            android:textColor="@color/main_title_text_color"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/main_line_color"
            android:layout_alignParentTop="true"></View>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:background="@color/main_line_color"
            android:layout_alignParentBottom="true"></View>
    </RelativeLayout>

    <Button
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/selector_app_comfirm"
        android:text="删除"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>