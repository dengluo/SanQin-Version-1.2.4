<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/main_line_color"></View>
    <com.pbids.sanqin.ui.view.WarpLinearLayout
        android:id="@+id/me_feedback_fixed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="15dp"
        app:grivate="left"
        app:horizontal_Space="@dimen/dp_10"
        app:isFull="false"
        app:vertical_Space="@dimen/dp_10">
    </com.pbids.sanqin.ui.view.WarpLinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dp_15">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150">
            <EditText
                android:id="@+id/me_feedback_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_no_gray"
                android:hint="请输入反馈信息"
                android:textSize="@dimen/sp_17"
                android:gravity="top|left"
                android:padding="@dimen/dp_4"
                android:textColorHint="@color/main_hit_text_color"
                android:textColor="@color/main_title_text_color"/>
        </FrameLayout>

        <Button
            android:id="@+id/me_feedback_bt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/selector_app_comfirm"
            style="?android:attr/borderlessButtonStyle"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_15"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/main_line_color"
        ></View>
</LinearLayout>