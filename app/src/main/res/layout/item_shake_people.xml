<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >


            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_10"
                android:gravity="center">
                <com.netease.nim.uikit.common.ui.imageview.HeadImageView
                    android:id="@+id/shake_people_item_head"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:scaleType="centerCrop"/>
                <!--商务合作-->
                <ImageView
                    android:id="@+id/shake_people_cooperation"
                    android:layout_width="@dimen/dp_18"
                    android:layout_height="@dimen/dp_18"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/kiss_label_zong_default"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/shake_people_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_10"
                android:maxWidth="@dimen/dp_80"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/rl1"
                android:drawablePadding="4dip"
                android:text="所说的"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="@dimen/sp_15"/>

            <!--等级-->
            <TextView
                android:id="@+id/shake_people_levelname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/shake_people_item_name"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:layout_centerVertical="true"
                android:singleLine="true"
                android:text="正府"
                android:textColor="@color/white"
                android:paddingRight="@dimen/dp_2"
                android:paddingLeft="@dimen/dp_2"
                android:background="@drawable/level_name_round_bg"
                android:textSize="11sp"/>

            <!--vip-->
            <TextView
                android:id="@+id/shake_people_item_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/vip_round_bg"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_100"
                android:ellipsize="end"
                android:layout_marginTop="@dimen/dp_4"
                android:paddingLeft="@dimen/dp_2"
                android:paddingRight="@dimen/dp_2"
                android:singleLine="true"
                android:text="VIP2"
                android:textColor="#ffffff"
                android:textSize="@dimen/dp_12" />
            <!--<Button-->
                <!--android:id="@+id/shake_people_bt"-->
                <!--android:layout_width="@dimen/dp_52"-->
                <!--android:layout_height="@dimen/dp_26"-->
                <!--style="?android:attr/borderlessButtonStyle"-->
                <!--android:layout_centerVertical="true"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:background="@drawable/selector_app_comfirm"-->
                <!--android:layout_marginRight="@dimen/dp_10"-->
                <!--android:text="同意"-->
                <!--android:textColor="@color/white"-->
                <!--android:textSize="@dimen/sp_15"/>-->

    <View
        style="@style/horizontal_light_thin_divider"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="10dp"/>

</RelativeLayout>