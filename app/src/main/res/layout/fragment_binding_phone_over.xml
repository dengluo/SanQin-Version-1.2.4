<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/main_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_10"
        android:text="绑定手机号"
        android:gravity="center_vertical|left"
        android:paddingLeft="@dimen/dp_15"
        android:textSize="@dimen/sp_15"
        android:textColor="@color/main_assist_text_color"/>
    <TextView
        android:id="@+id/phone_over_tv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_15"
        android:gravity="center_vertical"
        android:text="123456789101"
        android:textSize="@dimen/sp_17"
        android:textColor="@color/main_title_text_color"/>
    <Button
        android:id="@+id/phone_over_bt"
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/selector_app_comfirm"
        android:text="更换手机号"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/white"/>
</LinearLayout>