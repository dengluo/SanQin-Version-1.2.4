<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40">
    <!--<View-->
        <!--android:id="@+id/me_title_left_layout"-->
        <!--android:layout_width="@dimen/dp_40"-->
        <!--android:layout_height="@dimen/dp_40"-->
        <!--android:layout_alignParentLeft="true"-->
        <!--android:layout_centerVertical="true">-->
    <!--</View>-->
    <RelativeLayout
        android:id="@+id/main_left_layout"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:id="@+id/me_title_left_arrow"
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_22"
            android:layout_centerInParent="true"
            android:src="@drawable/nav_button_fanhui_default"
            android:layout_marginLeft="@dimen/dp_15"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/me_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="@color/main_title_text_color"
        android:textSize="@dimen/sp_20"
        android:text="我的个人信息"/>
    <RelativeLayout
        android:id="@+id/main_right_layout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_40"
        android:minWidth="@dimen/dp_80"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/me_title_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/dp_10"
            android:text="使用规则"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/main_title_text_color"/>
    </RelativeLayout>
</RelativeLayout>