<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--     android:src="@drawable/invite_step" -->
            <!--些处设置大图片会引起内存问题-->
            <ImageView
                android:id="@+id/invite_step_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:visibility="visible"/>

            <ImageView
                android:id="@+id/invite_poster_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:visibility="gone" />
            <ImageView
                android:id="@+id/invite_down_arrow"
                android:layout_width="@dimen/dp_23"
                android:layout_height="@dimen/dp_25"
                android:src="@drawable/invite_arrow_down"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/dp_20"/>

            <TextView
                android:id="@+id/me_invite_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邀请规则"
                android:padding="@dimen/dp_15"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/dp_10"/>

            <Button
                android:id="@+id/invite_poster_share"
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_app_comfirm_press"
                android:text="一键生成海报并分享"
                android:textColor="@color/white" />
            <!--<Button-->
                <!--android:id="@+id/invite_save_poster"-->
                <!--android:layout_width="@dimen/dp_200"-->
                <!--android:layout_height="@dimen/dp_40"-->
                <!--android:layout_gravity="center_horizontal"-->
                <!--android:background="@drawable/shape_app_comfirm_press"-->
                <!--android:text="图片保存到本地"-->
                <!--android:textColor="@color/white"-->
                <!--android:visibility="gone"/>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_30"
                android:paddingTop="@dimen/dp_30">

                <View
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_1"
                    android:layout_gravity="center_vertical"
                    android:background="@color/color_b3b3b3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:text="分享至" />

                <View
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_1"
                    android:layout_gravity="center_vertical"
                    android:background="@color/color_b3b3b3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_50">

                <ImageView
                    android:id="@+id/share_wx"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:src="@drawable/login_weixin" />

                <ImageView
                    android:id="@+id/share_wx_friend"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginLeft="@dimen/dp_50"
                    android:src="@drawable/circle_friend" />

                <ImageView
                    android:id="@+id/share_weibo"
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_marginLeft="@dimen/dp_50"
                    android:src="@drawable/weibo" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

        <ImageView
            android:id="@+id/post_down_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>
    </FrameLayout>


