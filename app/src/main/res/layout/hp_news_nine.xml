<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/hp_news_nine_image"
            android:layout_width="@dimen/dp_360"
            android:layout_height="@dimen/dp_90"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/hp_news_nine_image_ad_bt"
            android:layout_width="@dimen/dp_54"
            android:layout_height="@dimen/dp_15"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_70"
            android:src="@drawable/information_buttom_guanggao_defalt" />
    </FrameLayout>

    <!--<include layout="@layout/hp_news_more"-->
        <!--android:visibility="gone"></include>-->
    <View
        android:id="@+id/home_item_decoration"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="@color/main_status_color"></View>
</LinearLayout>