<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/me_gift_available_layout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/dp_14"
    android:layout_marginLeft="@dimen/dp_14"
    android:layout_marginRight="@dimen/dp_14"
    android:layout_height="@dimen/dp_100">
    <ImageView
        android:id="@+id/me_gift_available_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:scaleType="fitXY"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_15"
            android:orientation="vertical"
            android:layout_weight="3">
            <TextView
                android:id="@+id/me_gift_available_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="礼券名称"
                android:textSize="@dimen/sp_18"/>
            <TextView
                android:id="@+id/me_gift_available_information"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:paddingRight="@dimen/dp_35"
                android:text="备注信息备注信息备注信息备注信息备注信息备注信息备注信息"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_10"
            android:layout_weight="1.56"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/rv_right_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有效期至:"
                android:textSize="@dimen/sp_10"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/me_gift_available_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017.10.29"
                android:textSize="@dimen/sp_10"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"/>
            <TextView
                android:id="@+id/me_gift_available_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017.11.2"
                android:textSize="@dimen/sp_10"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/white"/>
            <Button
                android:id="@+id/me_gift_available_bt"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center_horizontal"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/selector_me_gift_available_red"
                android:text="立即兑换"
                android:textColor="@color/main_link_text_color"
                android:textSize="@dimen/sp_14"
                android:visibility="gone"
                />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>