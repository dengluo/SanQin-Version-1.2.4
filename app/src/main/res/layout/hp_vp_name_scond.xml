<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F7F7F7">

    <ImageView
        android:id="@+id/hp_vp_name_im"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_262"
        android:src="@drawable/bogujia_bg"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="@dimen/dp_20"></ImageView>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="@dimen/dp_300"
            android:layout_height="@dimen/dp_267"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.1">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.05"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/hp_history_people"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80"
                        android:src="@drawable/bogujia_button_jiazuhuihuang_defalt"/>
                    <!--android:background="@drawable/hp_history_people" />-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.1">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/hp_now_people"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80"
                        android:src="@drawable/bogujia_button_jiashirenwen_defalt" />
                    <!--android:background="@drawable/hp_now_people" />-->
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.12">

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.06">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.19"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/hp_customs"
                        android:layout_width="@dimen/dp_99"
                        android:layout_height="@dimen/dp_44"
                        android:src="@drawable/bogujia_button_jiafeng_defalt"/>
                    <!--android:background="@drawable/hp_customs" />-->
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/hp_vp_name_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/hp_vp_name_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:ems="1"
                        android:gravity="center"
                        android:text="文档我"
                        android:textColor="#462828"
                        android:textSize="@dimen/sp_28" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.19"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/hp_jiaxun"
                        android:layout_width="@dimen/dp_99"
                        android:layout_height="@dimen/dp_44"
                        android:src="@drawable/zhixing2x" />
                    <!--android:background="@drawable/hp_jiaxun" />-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.08">

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.1">

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1.05"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/hp_history_reilc"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80"
                        android:src="@drawable/renjie2x" />
                    <!--android:background="@drawable/hp_history_reilc" />-->
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.1">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/hp_fanily_news"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80"
                        android:src="@drawable/bogujia_button_jiazuyiji_defalt"/>
                    <!--android:background="@drawable/hp_fanily_new" />-->
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.12">

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </FrameLayout>
</FrameLayout>
