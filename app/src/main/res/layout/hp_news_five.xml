<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:padding="@dimen/homepage_news_margin_left">

        <!--<include-->
            <!--layout="@layout/hp_im_top_nologo"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"></include>-->

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_20"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/nformation_icon_huodong_defalt"/>
                <TextView
                    android:id="@+id/home_news_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="中华任命共和国第五次人大代表大会"
                    android:textStyle="bold"
                    android:textColor="@color/main_title_text_color"
                    android:textSize="@dimen/sp_17" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_news_index_layout_parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginBottom="@dimen/dp_6"
                android:orientation="horizontal">

            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/home_im_five_image"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/dp_346"
            android:layout_height="@dimen/dp_208" />

        <TextView
            android:id="@+id/home_im_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/dp_8"
            android:text="2小时前"
            android:textColor="#D7D7D7"
            android:textSize="@dimen/sp_12" />

        <Button
            android:id="@+id/home_im_five_bt"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginBottom="@dimen/dp_8"
            android:layout_width="@dimen/dp_270"
            style="?android:attr/borderlessButtonStyle"
            android:text="参与活动"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/white"
            android:background="@drawable/selector_app_comfirm"
            android:layout_height="@dimen/dp_40" />
    </LinearLayout>
    <!--<include layout="@layout/hp_news_more"-->
        <!--android:visibility="gone"></include>-->
    <View
        android:id="@+id/home_item_decoration"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="@color/main_status_color"></View>
</LinearLayout>