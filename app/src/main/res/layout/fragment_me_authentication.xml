<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/main_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_20"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:text="姓名"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/main_assist_text_color"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/main_line_color"></View>
    <EditText
        android:id="@+id/me_authentication_name_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:paddingLeft="@dimen/dp_15"
        android:gravity="center_vertical"
        android:hint="请输入您的真实姓名"
        android:textSize="@dimen/sp_19"
        android:background="@color/white"
        android:textColorHint="@color/main_assist_text_color"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/main_line_color"></View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:text="身份证"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/main_assist_text_color"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/main_line_color"></View>
    <EditText
        android:id="@+id/me_authentication_idcard_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:paddingLeft="@dimen/dp_15"
        android:gravity="center_vertical"
        android:inputType="number"
        android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
        android:hint="请输入您的身份证号码"
        android:textSize="@dimen/sp_19"
        android:background="@color/white"
        android:textColorHint="@color/main_assist_text_color"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/main_line_color"></View>

    <Button
        android:id="@+id/authem_new_next"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_60"
        android:text="提交"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/selector_app_comfirm"
        style="?android:attr/borderlessButtonStyle"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_19"/>
</LinearLayout>