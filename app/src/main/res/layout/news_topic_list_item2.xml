<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/news_topic_item_circle"
        android:layout_width="@dimen/dp_7"
        android:layout_height="@dimen/dp_7"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:src="@drawable/shape_news_red_index"/>
    <com.pbids.sanqin.ui.view.CircleImageView
        android:id="@+id/news_topic_item_index"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_centerVertical="true"
        android:src="@drawable/picture_touxiang1_biaoqian_defalt"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_toRightOf="@+id/news_topic_item_circle"
        app:border_color="@color/main_line_color"
        app:border_width="@dimen/dp_1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="杨氏宗亲聚会"
        android:textColor="@color/main_title_text_color"
        android:textSize="@dimen/sp_16"
        android:layout_marginLeft="@dimen/dp_7"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/news_topic_item_index"/>
    <ImageView
        android:layout_width="@dimen/dp_26"
        android:layout_height="@dimen/dp_26"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_7"
        android:src="@drawable/me_button_xiayiye_default"/>
</RelativeLayout>