<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="您的支付密码"
        android:textColor="@color/main_assist_text_color"
        android:textSize="@dimen/sp_14"
        android:layout_gravity="center_vertical"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/main_line_color"></View>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/white"
        android:paddingLeft="@dimen/dp_15"
        android:gravity="center_vertical"
        android:text="* * * * * *"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/main_title_text_color"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/main_line_color"></View>
    <Button
        android:id="@+id/pay_setpassword_bt"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/selector_app_comfirm"
        android:layout_marginTop="@dimen/dp_150"
        style="?android:attr/borderlessButtonStyle"
        android:text="修改密码"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_19"/>

</LinearLayout>