<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_50"
    android:paddingRight="@dimen/dp_50"
    android:paddingTop="@dimen/dp_78">

    <EditText
        android:id="@+id/me_nick_name_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cases_crowd_et"
        android:hint="请输入您的别称"/>

    <Button
        android:id="@+id/me_nick_name_save_bt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_43"
        android:background="@drawable/shape_app_comfirm_normal_7r"
        android:layout_marginTop="@dimen/dp_33"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_19"/>

</LinearLayout>
