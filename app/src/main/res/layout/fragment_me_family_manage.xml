<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/main_status_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <TextView
            android:id="@+id/me_manage_family_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_15"
            android:text="\?"
            android:textColor="@color/main_title_text_color"
            android:textSize="@dimen/sp_32"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/me_manage_family_number1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/me_manage_family_number"
            android:layout_alignBottom="@+id/me_manage_family_number"
            android:layout_toEndOf="@+id/me_manage_family_number"
            android:layout_toRightOf="@+id/me_manage_family_number"
            android:text="万"
            android:textColor="@color/main_title_text_color"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/me_manage_family_number"
            android:layout_alignStart="@+id/me_manage_family_number"
            android:layout_below="@+id/me_manage_family_number"
            android:text="家族人数"
            android:textColor="@color/main_title_text_color"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/me_manage_family_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv1"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_30"
            android:text="\?"
            android:textColor="@color/main_title_text_color"
            android:textSize="@dimen/sp_32"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/me_manage_family_money1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/me_manage_family_money"
            android:layout_alignBottom="@+id/me_manage_family_money"
            android:layout_toEndOf="@+id/me_manage_family_money"
            android:layout_toRightOf="@+id/me_manage_family_money"
            android:text="万"
            android:textColor="@color/main_title_text_color"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/me_manage_family_money"
            android:layout_alignStart="@+id/me_manage_family_money"
            android:layout_below="@+id/me_manage_family_money"
            android:layout_marginBottom="@dimen/dp_15"
            android:text="家族财富"
            android:textColor="@color/main_title_text_color"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/me_manage_family_number_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv1"
            android:layout_alignBottom="@+id/tv1"
            android:layout_alignStart="@+id/tv3"
            android:layout_marginStart="11dp"
            android:text="\?"
            android:textColor="@color/main_title_text_color"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/me_manage_family_money_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv2"
            android:layout_alignBottom="@+id/tv2"
            android:layout_alignStart="@+id/me_manage_family_number_add"
            android:text="\?"
            android:textColor="@color/main_title_text_color"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/me_manage_family_money_add"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="38dp"
            android:gravity="right"
            android:text="今日新增财富"
            android:textColor="@color/main_index_text_color"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/me_manage_family_number_add"
            android:layout_alignStart="@+id/textView3"
            android:text="今日新增人数"
            android:textColor="@color/main_index_text_color"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/main_line_color"></View>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/main_line_color"></View>

    <RelativeLayout
        android:id="@+id/me_manage_family_news_layout"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">


        <TextView
            android:id="@+id/me_manage_family_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="家族资讯数据"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/main_title_text_color"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_15" />

        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/me_button_xiayiye_default" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/main_line_color"></View>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/main_line_color"></View>
    <RelativeLayout
        android:id="@+id/me_manage_family_member_layout"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:id="@+id/me_manage_family_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="家族人员分布"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/main_title_text_color"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_15" />

        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/me_button_xiayiye_default" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/main_line_color"></View>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/main_line_color"></View>
    <RelativeLayout
        android:id="@+id/me_manage_family_campaign_layout"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">


        <TextView
            android:id="@+id/me_manage_campaign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="家族活动"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/main_title_text_color"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dp_15" />

        <ImageView
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/me_button_xiayiye_default" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/main_line_color"></View>
</LinearLayout>