<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40">
    <ImageView
        android:id="@+id/news_topic_item_circle"
        android:layout_width="@dimen/dp_7"
        android:layout_height="@dimen/dp_7"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:src="@drawable/shape_news_red_index"/>
    <TextView
        android:id="@+id/news_topic_item_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_5"
        android:background="@drawable/shape_gray_radius_index"
        android:paddingTop="@dimen/dp_1"
        android:paddingBottom="@dimen/dp_1"
        android:paddingLeft="@dimen/dp_3"
        android:paddingRight="@dimen/dp_3"
        android:text="礼乐"
        android:gravity="center"
        android:textColor="@color/main_title_text_color"
        android:textSize="@dimen/sp_14"
        android:layout_toRightOf="@+id/news_topic_item_circle"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创意文化周边展示大会"
        android:textColor="@color/main_title_text_color"
        android:textSize="@dimen/sp_16"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/news_topic_item_index"/>
    <ImageView
        android:id="@+id/me_name_location_right_arrow"
        android:layout_width="@dimen/dp_26"
        android:layout_height="@dimen/dp_26"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_7"
        android:src="@drawable/me_button_xiayiye_default"/>
</RelativeLayout>