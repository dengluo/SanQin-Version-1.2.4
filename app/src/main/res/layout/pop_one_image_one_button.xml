<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_280"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="@dimen/dp_25"
    android:background="@drawable/shape_white_no_2r">
    <ImageView
        android:id="@+id/one_image"
        android:layout_width="@dimen/dp_85"
        android:layout_height="@dimen/dp_85"
        android:layout_centerHorizontal="true"
        android:src="@color/black"
        />
    <TextView
        android:id="@+id/one_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="兑换成功"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_below="@+id/one_image"
        android:textSize="@dimen/sp_19"
        android:textColor="@color/main_color"
        />
    <TextView
        android:id="@+id/two_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/one_text"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_20"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/main_assist_text_color"
        android:text="却还的,积极在我“的资金”中可以查看"/>
    
    <Button
        android:id="@+id/one_button"
        android:layout_width="@dimen/dp_120"
        android:layout_height="@dimen/dp_40"
        android:layout_centerHorizontal="true"
        android:background="@drawable/selector_app_comfirm"
        style="?android:attr/borderlessButtonStyle"
        android:text="我知道了"
        android:layout_below="@+id/two_text"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_19"/>
</RelativeLayout>