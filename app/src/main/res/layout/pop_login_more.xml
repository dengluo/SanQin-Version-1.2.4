<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/login_pop_bg"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_106"
            android:background="@drawable/log_more_pop"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/dp_3"
        android:gravity="center">
        <ImageView
            android:id="@+id/login_pop_zhifubao"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/login_icon_jinsuanzi_default"/>
        <ImageView
            android:id="@+id/login_pop_jinsuanzi"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/login_zhifubao"/>
    </LinearLayout>
</FrameLayout>