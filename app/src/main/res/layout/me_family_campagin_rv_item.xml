<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_15">
        <TextView
            android:id="@+id/me_family_campagin_item_title"
            android:layout_width="@dimen/dp_220"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="湘西新桥镇招新活动"
            android:textColor="@color/main_title_text_color"
            android:textSize="@dimen/sp_16"/>
        <TextView
            android:id="@+id/me_family_campagin_item_content"
            android:layout_width="@dimen/dp_220"
            android:layout_height="wrap_content"
            android:text="活动简介:描述东东的基本信息"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/dp_10"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/main_index_text_color"
            android:layout_below="@+id/me_family_campagin_item_title"
            />
        <TextView
            android:id="@+id/me_family_campagin_item_time"
            android:layout_width="@dimen/dp_220"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="活动日期:2017年7月8日-2017年7月12日"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/main_assist_text_color"
            android:layout_below="@+id/me_family_campagin_item_content"
            />
        <TextView
            android:id="@+id/me_family_campagin_item_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23561"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/main_title_text_color"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/me_family_campagin_item_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="参与人数"
            android:textSize="@dimen/sp_12"
            android:layout_below="@+id/me_family_campagin_item_number"
            android:textColor="@color/main_title_text_color"
            android:layout_alignParentRight="true"/>

        <Button
            android:id="@+id/me_family_campagin_item_bt"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_24"
            style="?android:attr/borderlessButtonStyle"
            android:text="进行中"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:background="@drawable/selector_app_comfirm"
            android:layout_alignBottom="@+id/me_family_campagin_item_time"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"
        android:background="@color/main_line_color"></View>
</LinearLayout>