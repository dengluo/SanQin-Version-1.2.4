<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/cases_search_tv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@drawable/cases_crowd_et"
                android:hint="@string/cases_crowd_head_create_search_title"
                android:paddingLeft="@dimen/dp_50"
                android:textSize="@dimen/sp_16"
                android:gravity="center_vertical"
                />

            <EditText
                android:id="@+id/cases_search_et"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_48"
                android:background="@drawable/cases_crowd_et"
                android:hint="@string/cases_crowd_head_create_search_title"
                android:paddingLeft="@dimen/dp_50"
                android:textSize="@dimen/sp_16"
                android:gravity="center_vertical"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/team_search_img"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:src="@drawable/kiss_icon_sousuo_default"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"/>
        </FrameLayout>

</LinearLayout>
