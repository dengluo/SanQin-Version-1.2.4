<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">

        <TextView
            android:id="@+id/zc_ranking_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="1"
            android:textColor="#A8A8A8"
            android:textSize="@dimen/sp_17" />
        android:src="@drawable/information_tab_vip_defalt"/>

        <LinearLayout
            android:id="@+id/rl_header"
            android:layout_width="@dimen/dp_34"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_35"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="@dimen/dp_34"
                android:layout_height="@dimen/dp_34">

                <com.pbids.sanqin.ui.view.CircleImageView
                    android:id="@+id/zongquan_fried_list_touxiang"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@drawable/new_avatar_touxiang3_default"
                    app:border_color="@color/transparent"
                    app:border_width="0dp" />

                <ImageView
                    android:id="@+id/tv_rank_zong"
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_10"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/kiss_label_zong_default" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_rank_vip"
                android:layout_width="wrap_content"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_2"
                android:background="@drawable/shape_qr_vip"
                android:gravity="center"
                android:paddingLeft="@dimen/dp_2"
                android:paddingRight="@dimen/dp_2"
                android:text="VIP"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_11" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_rank_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_toRightOf="@+id/rl_header"
            android:text="阿里巴巴"
            android:textColor="@color/main_title_text_color"
            android:textSize="@dimen/sp_17" />

        <TextView
            android:id="@+id/zc_ranking_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_toRightOf="@+id/tv_rank_name"
            android:background="@drawable/shape_deepgray_no_2r"
            android:padding="@dimen/dp_2"
            android:text="正府试试"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/brick_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv1"
            android:text="60"
            android:textColor="#B3B3B3"
            android:textSize="@dimen/sp_10" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_toLeftOf="@+id/zc_ranking_arrow"
            android:text="块砖"
            android:textColor="#B3B3B3"
            android:textSize="@dimen/sp_10" />

        <ImageView
            android:id="@+id/zc_ranking_arrow"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@drawable/new_icon_xiangshang_default" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@color/main_line_color"></View>
    </RelativeLayout>
</LinearLayout>