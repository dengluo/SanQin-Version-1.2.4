<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pbids.sanqin.ui.activity.BootPageActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/bp_vp_install"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/bp_ad_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_gravity="center"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:id="@+id/bp_iv_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_gravity="center_horizontal|bottom">
        </LinearLayout>

        <ImageView
            android:id="@+id/bp_qidong_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop"/>

        <Button
            android:id="@+id/bp_bt"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_30"
            android:layout_gravity="right|top"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_20"
            android:visibility="gone"
            style="?android:attr/borderlessButtonStyle"
            android:text="跳过(3)"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:background="#60000000"/>

        <Button
            android:id="@+id/bp_next_bt"
            android:layout_width="@dimen/dp_80"
            android:layout_height="@dimen/dp_35"
            android:background="@drawable/selector_app_comfirm"
            style="?android:attr/borderlessButtonStyle"
            android:visibility="gone"
            android:text="立即进入"
            android:textSize="@dimen/sp_15"
            android:textColor="@color/white"
            android:layout_marginBottom="@dimen/dp_30"
            android:layout_gravity="center_horizontal|bottom"/>

    </FrameLayout>

</LinearLayout>
