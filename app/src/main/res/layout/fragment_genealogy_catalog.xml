<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <!-- android:background="@drawable/new_bg_mulu_default"-->

    <ImageView
        android:id="@+id/img_mbg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/ly_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right">

            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="match_parent"
                android:layout_weight="60" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="wrap_content"

                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/yin_zhang" />
                <TextView
                    android:id="@+id/tv_catalog"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginTop="@dimen/dp_2"
                    style="@style/genealogy_catalog_item"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="目录"
                    android:background="@color/transparent"
                    android:textSize="@dimen/sp_25" />

            </RelativeLayout>


            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="match_parent"
                android:layout_weight="8" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:gravity="right">

            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="match_parent"
                android:layout_weight="8" />

            <TextView
                android:id="@+id/tv2"
                style="@style/genealogy_catalog_item"
                android:text="家史人文" />

            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="match_parent"
                android:layout_weight="8" />

            <TextView
                android:id="@+id/tv3"
                style="@style/genealogy_catalog_item"
                android:text="家族辉煌" />

            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="match_parent"
                android:layout_weight="8" />

            <TextView
                android:id="@+id/tv4"
                style="@style/genealogy_catalog_item"
                android:text="家族渊源" />

            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="match_parent"
                android:layout_weight="8" />

            <TextView
                android:id="@+id/tv5"
                style="@style/genealogy_catalog_item"
                android:text="家族渊源" />

            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="match_parent"
                android:layout_weight="8" />

            <TextView
                android:id="@+id/tv6"
                style="@style/genealogy_catalog_item"
                android:text="家族渊源" />

            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="match_parent"
                android:layout_weight="8" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_30"
            android:gravity="right">

            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="match_parent"
                android:layout_weight="8" />

            <TextView
                android:id="@+id/tv7"
                style="@style/genealogy_catalog_item"
                android:text="家族渊源" />

            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="match_parent"
                android:layout_weight="8" />

            <TextView
                android:id="@+id/tv8"
                style="@style/genealogy_catalog_item"
                android:text="宗族名人" />

            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="match_parent"
                android:layout_weight="8" />

            <TextView
                android:id="@+id/tv9"
                style="@style/genealogy_catalog_item"
                android:text="家族资讯" />

            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="match_parent"
                android:layout_weight="8" />

            <TextView
                android:id="@+id/tv10"
                style="@style/genealogy_catalog_item"
                android:text="族规家训" />

            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="match_parent"
                android:layout_weight="8" />

            <TextView
                android:id="@+id/tv11"
                style="@style/genealogy_catalog_item"
                android:text="族正家风" />

            <View
                android:layout_width="@dimen/dp_2"
                android:layout_height="match_parent"
                android:layout_weight="8" />
        </LinearLayout>

    </LinearLayout>



</RelativeLayout>