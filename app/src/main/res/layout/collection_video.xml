<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/dp_15"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/collection_dagou"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_5"
            android:visibility="visible"
            android:src="@drawable/selector_circle_dagou"
            android:layout_above="@+id/collection_index_layout"
            android:layout_alignParentTop="true" />
        <TextView
            android:id="@+id/collection_title"
            android:layout_width="@dimen/dp_170"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/collection_dagou"
            android:layout_marginBottom="@dimen/dp_4"
            android:layout_alignParentTop="true"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="王氏活动事件的标题"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/main_title_text_color"/>
    <LinearLayout
        android:id="@+id/collection_index_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/collection_title"
        android:layout_alignLeft="@+id/collection_title"
        android:layout_alignStart="@+id/collection_title"
        android:orientation="horizontal">

    </LinearLayout>

    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main_title_text_color"
        android:textSize="@dimen/sp_12"
        android:text="阅读"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_below="@+id/collection_index_layout"
        android:layout_alignLeft="@+id/collection_index_layout"
        android:layout_alignStart="@+id/collection_index_layout" />
    <TextView
        android:id="@+id/collection_read"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        android:layout_toRightOf="@+id/tv1"
        android:layout_alignBaseline="@+id/tv1"
        android:textColor="@color/main_title_text_color"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main_title_text_color"
        android:textSize="@dimen/sp_12"
        android:text="打赏"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/collection_read"
        android:layout_alignBaseline="@+id/collection_read" />

    <TextView
        android:id="@+id/collection_reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        android:layout_toRightOf="@+id/tv2"
        android:layout_alignBaseline="@+id/tv2"
        android:textColor="@color/main_title_text_color"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="转发"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/collection_reward"
        android:layout_alignBaseline="@+id/collection_reward"
        android:textColor="@color/main_title_text_color"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/collection_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        android:layout_toRightOf="@+id/tv3"
        android:layout_alignBaseline="@+id/tv3"
        android:textColor="@color/main_title_text_color"
        android:textSize="@dimen/sp_12" />
    
    <Button
        android:id="@+id/collection_campaign"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_22"
        android:visibility="gone"
        style="?android:attr/borderlessButtonStyle"
        android:text="活动"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_below="@+id/tv1"
        android:layout_alignLeft="@+id/tv1"
        android:layout_alignStart="@+id/tv1"
        android:gravity="center"
        android:background="@drawable/selector_app_comfirm"/>

    <FrameLayout
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_63"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/collection_image"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_60"
            android:scaleType="fitXY"/>

        <ImageView
            android:id="@+id/collection_play"
            android:layout_width="@dimen/dp_36"
            android:layout_height="@dimen/dp_36"
            android:visibility="gone"
            android:layout_gravity="center"
            android:src="@drawable/information_icon_play_default"/>
    </FrameLayout>
</RelativeLayout>