<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择您的姓氏"
        android:textColor="@color/main_assist_text_color"
        android:textSize="@dimen/sp_16"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_60"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:gravity="center">
        <Button
            android:id="@+id/one_text_bt"
            android:layout_width="@dimen/dp_157"
            android:layout_height="@dimen/dp_40"
            android:text="欧"
            style="?android:attr/borderlessButtonStyle"
            android:textSize="@dimen/sp_19"
            android:textColor="@color/selector_selectfirstname_text"
            android:background="@drawable/selector_selectfirstname_bt"
            android:layout_marginRight="@dimen/dp_15"
            android:stateListAnimator="@null"/>
        <Button
            android:id="@+id/two_text_bt"
            android:layout_width="@dimen/dp_157"
            android:layout_height="@dimen/dp_40"
            android:text="欧"
            style="?android:attr/borderlessButtonStyle"
            android:textSize="@dimen/sp_19"
            android:textColor="@color/selector_selectfirstname_text"
            android:background="@drawable/selector_selectfirstname_bt"
            android:stateListAnimator="@null"/>
    </LinearLayout>
    
    <Button
        android:id="@+id/submit_bt"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_60"
        android:background="@drawable/selector_app_comfirm"
        style="?android:attr/borderlessButtonStyle"
        android:text="保存"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_19"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>