<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginRight="@dimen/dp_15"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/me_bank_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_110"
        android:scaleType="centerCrop"/>
    <ImageView
        android:id="@+id/me_bank_icon"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginLeft="@dimen/dp_15"/>
    <TextView
        android:id="@+id/me_bank_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中国银行"
        android:textSize="@dimen/sp_14"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_alignTop="@+id/me_bank_icon"
        android:layout_toRightOf="@+id/me_bank_icon"
        android:layout_toEndOf="@+id/me_bank_icon"
         />
    <TextView
        android:id="@+id/me_bank_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="信用卡"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/white"
        android:layout_alignBottom="@+id/me_bank_icon"
        android:layout_alignLeft="@+id/me_bank_name"
        android:layout_alignStart="@+id/me_bank_name" />
    <TextView
        android:id="@+id/me_bank_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="* * * *  * * * *  * * * *  2 5 7 8"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_25"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_60"
        android:layout_marginBottom="@dimen/dp_25" />
</RelativeLayout>