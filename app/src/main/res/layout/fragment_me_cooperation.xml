<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/main_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/main_hit_text_color_aother"></View>

    <EditText
        android:id="@+id/me_cooperation_name_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:paddingLeft="@dimen/dp_15"
        android:background="@color/white"
        android:textColorHint="@color/main_hit_text_color_aother"
        android:hint="请输入姓名"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/main_hit_text_color_aother"></View>
    <EditText
        android:id="@+id/me_cooperation_phone_et"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:paddingLeft="@dimen/dp_15"
        android:background="@color/white"
        android:textColorHint="@color/main_hit_text_color_aother"
        android:hint="请输入电话号码"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/main_line_color"></View>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/main_line_color"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_190"
        android:background="@color/white">
        <EditText
            android:id="@+id/me_cooperation_event_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_160"
            android:layout_margin="@dimen/dp_15"
            android:background="@drawable/shape_no_gray"
            android:gravity="top|left"
            android:padding="@dimen/dp_5"
            android:textColorHint="@color/main_hit_text_color_aother"
            android:hint="请输入合作事项"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/main_hit_text_color_aother"></View>
    <Button
        android:id="@+id/me_cooperation_bt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        android:layout_marginTop="@dimen/dp_50"
        style="?android:attr/borderlessButtonStyle"
        android:text="提交"
        android:textSize="@dimen/dp_18"
        android:textColor="@color/white"
        android:background="@drawable/selector_app_comfirm"/>
</LinearLayout>