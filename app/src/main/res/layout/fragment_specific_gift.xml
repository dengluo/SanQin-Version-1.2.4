<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_130"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@color/main_remind_color_aother">
        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="兑换界面"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_18"/>-->
        <ImageView
            android:id="@+id/img_gift_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />
        <!-- android:src="@drawable/activity_picture_changbaishan_default"-->
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10"
        android:text="支付成功"
        android:textSize="@dimen/dp_18"
        android:textColor="@color/main_title_text_color"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_6"
            android:layout_gravity="top"
            android:text="¥"
            android:textColor="@color/main_title_text_color"
            android:textSize="@dimen/sp_18" />
        <TextView
            android:id="@+id/specific_gift_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv1"
            android:text="1010"
            android:textSize="@dimen/sp_36"
            android:textColor="@color/main_title_text_color"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/specific_gift_code_iv"
        android:layout_width="@dimen/dp_260"
        android:layout_height="@dimen/dp_60"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_10"
            android:text="兑换码:"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/main_title_text_color"/>
        <TextView
            android:id="@+id/specific_gift_code_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456789"
            android:textSize="@dimen/sp_18"
            android:textColor="@color/main_title_text_color"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_6"
        android:layout_gravity="center_horizontal"
        android:text="说明：凭借此兑换码，可在活动中领取精美礼品一份。"
        android:textSize="@dimen/sp_12"
        android:textColor="@color/main_assist_text_color"/>
</LinearLayout>
