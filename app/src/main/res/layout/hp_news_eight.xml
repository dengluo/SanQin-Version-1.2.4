<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/homepage_news_margin_left">

        <TextView
            android:id="@+id/home_im_eight_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:text="中华任命共和国第五次人大代表大会"
            android:textColor="@color/main_title_text_color"
            android:textSize="@dimen/sp_17"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/home_im_eight_image"
            android:layout_width="@dimen/dp_346"
            android:layout_height="@dimen/dp_208"
            android:layout_marginTop="@dimen/dp_12"
            android:scaleType="fitXY" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8">

            <TextView
                android:id="@+id/home_im_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="2小时前"
                android:textColor="#D7D7D7"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:id="@+id/home_im_ad_bt"
                android:layout_width="@dimen/dp_54"
                android:layout_height="@dimen/dp_15"
                android:layout_alignParentRight="true"
                android:src="@drawable/information_buttom_guanggao_defalt" />
        </RelativeLayout>
    </LinearLayout>

    <!--<include layout="@layout/hp_news_more"-->
        <!--android:visibility="gone"></include>-->
    <View
        android:id="@+id/home_item_decoration"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="@color/main_status_color"></View>
</LinearLayout>