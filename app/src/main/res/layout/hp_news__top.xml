<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_4"
        android:gravity="center"
        android:orientation="horizontal">

        <com.pbids.sanqin.ui.view.CircleImageView
            android:id="@+id/home_news_icon"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_4"
            app:border_color="@color/main_hit_text_color"
            app:border_width="@dimen/dp_1" />

        <TextView
            android:id="@+id/home_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="中华杨氏宗亲大会"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/main_title_text_color"
            android:textStyle="bold"
            android:textSize="@dimen/sp_12" />
    </LinearLayout>

    <TextView
        android:id="@+id/home_news_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="中华任命共和国第五次人大代表大会"
        android:textStyle="bold"
        android:textColor="@color/main_title_text_color"
        android:textSize="@dimen/sp_17" />

    <LinearLayout
        android:id="@+id/home_news_index_layout_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:orientation="horizontal">
    </LinearLayout>
</LinearLayout>