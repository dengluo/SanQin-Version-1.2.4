<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40">
    <RelativeLayout
        android:id="@+id/main_left_layout"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:id="@+id/me_title_left_arrow"
            android:layout_width="@dimen/dp_13"
            android:layout_height="@dimen/dp_22"
            android:layout_centerVertical="true"
            android:src="@drawable/nav_button_fanhui_default"
            android:layout_marginLeft="@dimen/dp_15"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/me_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="@dimen/sp_20"
        android:textColor="@color/main_title_text_color"
        android:text="我的个人信息"/>
    <RelativeLayout
        android:id="@+id/main_right_layout"
        android:layout_alignParentRight="true"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:id="@+id/me_title_right_image"
            android:layout_width="@dimen/dp_22"
            android:layout_height="@dimen/dp_22"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/me_btn_lajitong_default"
            android:layout_marginRight="@dimen/dp_15"
            />
        <TextView
            android:id="@+id/me_title_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            android:text="完成"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/main_title_text_color"/>

    </RelativeLayout>
</RelativeLayout>