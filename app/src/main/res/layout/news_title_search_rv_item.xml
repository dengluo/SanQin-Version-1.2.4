<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_39">
        <TextView
            android:id="@+id/news_title_search_rv_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dp_15"
            android:text="333"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/main_title_text_color"/>
        <ImageView
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:src="@drawable/new_icon_xiangshang_default"/>
        <View
            android:id="@+id/news_title_search_rv_item_right"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_40"
            android:layout_height="match_parent"></View>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/main_line_color"
        android:layout_marginLeft="@dimen/dp_15"></View>

</LinearLayout>