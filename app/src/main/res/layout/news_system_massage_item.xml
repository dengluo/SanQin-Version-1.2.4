<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.pbids.sanqin.ui.recyclerview.swipe.SwipeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/swip_me_topic_subscribe_list_item"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/delete_lin"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_40"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:text="删除"
                android:background="#A62A0E"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/dp_20"/>
        </LinearLayout>

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:orientation="horizontal"
            android:gravity="center_vertical">
        <ImageView
            android:id="@+id/img_news_read_fag"
            android:layout_width="@dimen/dp_7"
            android:layout_height="@dimen/dp_7"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@drawable/shape_news_red_index"
            android:layout_gravity="center_vertical"/>

        <com.pbids.sanqin.ui.view.CircleImageView
            android:id="@+id/surname_icon_iv"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            app:border_color="@color/main_hit_text_color"
            app:border_width="@dimen/dp_1"
            android:src="@drawable/app_logo"
            android:layout_toRightOf="@+id/img_news_read_fag"
            android:layout_marginLeft="@dimen/dp_5"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tags_tv"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_15"
            android:background="@drawable/app_tags_bg"
            android:text="文化"
            android:layout_marginLeft="@dimen/dp_5"
            android:gravity="center"
            android:visibility="gone"/>


        <TextView
            android:id="@+id/txt_content"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="第一届汉文化知识竞赛要召开了"
            android:textColor="@color/main_title_text_color"
            android:textSize="@dimen/sp_16"
            android:layout_marginLeft="@dimen/dp_5"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_weight="1"
            android:layout_toRightOf="@+id/img_news_read_fag"
            />

        <ImageView
            android:id="@+id/me_name_location_right_arrow"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@drawable/me_button_xiayiye_default"/>
        </LinearLayout>

    </com.pbids.sanqin.ui.recyclerview.swipe.SwipeLayout>
</LinearLayout>