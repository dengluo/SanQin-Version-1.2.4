<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/pop_me_sex_layout"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_180"
        android:background="@drawable/shape_white_no_2r"
        android:layout_centerInParent="true"
        android:padding="@dimen/dp_15"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:textColor="@color/main_title_text_color"
            android:textSize="@dimen/sp_24"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/pop_me_sex_man_layout"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="男"
                    android:textSize="@dimen/sp_20"
                    android:textColor="@color/main_title_text_color"/>
                <ImageView
                    android:id="@+id/pop_me_sex_man"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/selector_circle_dagou"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/main_line_color"></View>
            <RelativeLayout
                android:id="@+id/pop_me_sex_women_layout"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="女"
                    android:textSize="@dimen/sp_20"
                    android:textColor="@color/main_title_text_color"/>
                <ImageView
                    android:id="@+id/pop_me_sex_women"
                    android:layout_width="@dimen/dp_20"
                    android:layout_height="@dimen/dp_20"
                    android:src="@drawable/selector_circle_dagou"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>