<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8">

        <TextView
            android:id="@+id/home_im_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="2小时前"
            android:textColor="#D7D7D7"
            android:textSize="@dimen/sp_12" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_10"
                android:background="@drawable/information_icon_view_defalt" />

            <TextView
                android:id="@+id/home_im_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_1"
                android:text="2.3万"
                android:textColor="@color/main_assist_text_color"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_13"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="@drawable/information_icon_forwarding_defalt" />

            <TextView
                android:id="@+id/home_im_forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_1"
                android:text="1.1万"
                android:textColor="@color/main_assist_text_color"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_5"
                android:background="@drawable/information_icon_reward_defalt" />

            <TextView
                android:id="@+id/home_im_reward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_1"
                android:text="8896"
                android:textColor="@color/main_assist_text_color"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>