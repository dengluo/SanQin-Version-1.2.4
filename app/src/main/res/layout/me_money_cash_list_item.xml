<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/money_list_lin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50">
        <ImageView
            android:id="@+id/me_money_cash_list_item_iv"
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:src="@drawable/me_icon_shenhetixian_default"
            android:visibility="gone"
            />
        <LinearLayout
            android:id="@+id/me_money_content_title"
            android:layout_width="@dimen/dp_120"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/me_money_cash_list_item_iv"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/dp_10">
            <TextView
                android:id="@+id/me_money_cash_list_item_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现失败退款"
                android:textColor="@color/main_title_text_color"
                android:textSize="@dimen/sp_14"/>
            <TextView
                android:id="@+id/me_money_cash_list_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017/11/27"
                android:textColor="@color/main_assist_text_color"
                android:textSize="@dimen/sp_12"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_toRightOf="@id/me_money_content_title"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_13">
            <TextView
                android:id="@+id/me_money_type"
                android:layout_width="@dimen/dp_43"
                android:layout_height="wrap_content"
                android:text="余额付"
                android:gravity="left"/>
            <TextView
                android:id="@+id/me_money_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="待处理"
                android:gravity="right"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right">
                <TextView
                    android:id="@+id/me_money_cash_list_item_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+45"
                    android:textColor="@color/main_title_text_color"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:id="@+id/me_money_cash_list_item_rmb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="@color/main_title_text_color"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
            <TextView
                android:id="@+id/charge_tips_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(含服务费2元)"
                android:textColor="#333333"
                android:visibility="gone"
                />


        </LinearLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/main_line_color"/>
</LinearLayout>