<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.pbids.sanqin.ui.activity.news.NewsIMFragment">
    <RelativeLayout
        android:id="@+id/news_system_messge_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_10">
        <ImageView
            android:id="@+id/news_system_messge_iv"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:src="@drawable/new_icon_xitongxiaoxi_default"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="系统消息"
            android:textSize="@dimen/sp_18"
            android:layout_centerVertical="true"
            android:textColor="@color/main_title_text_color"
            android:layout_toRightOf="@+id/news_system_messge_iv"
            android:layout_marginLeft="@dimen/dp_5"

            />
        <RelativeLayout
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_20"
            android:layout_toLeftOf="@+id/news_system_messge_right_arrow"
            android:layout_marginRight="@dimen/dp_2"
            android:layout_centerVertical="true"
            >
            <View
                android:id="@+id/news_system_mess_red_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_news_red_index" >
            </View>

            <TextView
                android:id="@+id/news_system_messge_messge_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/dp_2"
                />
        </RelativeLayout>

        <ImageView
            android:id="@+id/news_system_messge_right_arrow"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow_black"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/main_line_color"></View>
    <RelativeLayout
        android:id="@+id/news_huati_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <ImageView
            android:id="@+id/news_huati_iv"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:src="@drawable/new_icon_gongzhonghuati_default"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公众话题订阅"
            android:textSize="@dimen/sp_18"
            android:layout_centerVertical="true"
            android:textColor="@color/main_title_text_color"
            android:layout_toRightOf="@+id/news_huati_iv"
            android:layout_marginLeft="@dimen/dp_5"

            />

        <RelativeLayout
            android:layout_width="@dimen/dp_26"
            android:layout_height="@dimen/dp_20"
            android:layout_toLeftOf="@+id/news_huati_right_arrow"
            android:layout_marginRight="@dimen/dp_2"
            android:layout_centerVertical="true">
            <View
                android:id="@+id/huati_system_mess_red_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_news_red_index"></View>
            <TextView
                android:id="@+id/news_huati_messge_number"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_20"
                android:text="12"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_15"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/dp_2"
                />
        </RelativeLayout>

        <ImageView
            android:id="@+id/news_huati_right_arrow"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:src="@drawable/right_arrow_black"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
