<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/main_line_color"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dp_15">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150">
            <EditText
                android:id="@+id/me_information_autopragh_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/shape_no_gray"
                android:hint="请输入个性签名"
                android:textSize="@dimen/sp_17"
                android:maxLength="25"
                android:gravity="top|left"
                android:padding="@dimen/dp_4"
                android:textColorHint="@color/main_hit_text_color"
                android:textColor="@color/main_title_text_color"/>
            <TextView
                android:id="@+id/me_information_autopragh_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:text="0/25"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/main_hit_text_color"
                android:layout_marginRight="@dimen/dp_3"
                android:layout_marginBottom="@dimen/dp_3"/>
        </FrameLayout>

        <Button
            android:id="@+id/me_information_autopragh_bt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:background="@drawable/selector_app_comfirm"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            style="?android:attr/borderlessButtonStyle"
            android:text="保存"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_15"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/main_line_color"
        ></View>
</LinearLayout>