<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_gravity="bottom"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">
        <FrameLayout
            android:id="@+id/news_cash_pop_10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/news_cash_pop_10_iv"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:background="@drawable/selector_white_redgray_2r"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="10"
                android:textColor="@color/main_color"
                android:textSize="@dimen/sp_19"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/news_cash_pop_30"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/news_cash_pop_30_iv"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:background="@drawable/selector_white_redgray_2r"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="30"
                android:textColor="@color/main_color"
                android:textSize="@dimen/sp_19"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/news_cash_pop_50"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/news_cash_pop_50_iv"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:background="@drawable/selector_white_redgray_2r"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="50"
                android:textColor="@color/main_color"
                android:textSize="@dimen/sp_19"/>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60">
        <FrameLayout
            android:id="@+id/news_cash_pop_100"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/news_cash_pop_100_iv"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:background="@drawable/selector_white_redgray_2r"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="100"
                android:textColor="@color/main_color"
                android:textSize="@dimen/sp_19"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/news_cash_pop_500"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/news_cash_pop_500_iv"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:background="@drawable/selector_white_redgray_2r"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="500"
                android:textColor="@color/main_color"
                android:textSize="@dimen/sp_19"/>
        </FrameLayout>
        <FrameLayout
            android:id="@+id/news_cash_pop_2000"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/news_cash_pop_2000_iv"
                android:layout_width="@dimen/dp_90"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:background="@drawable/selector_white_redgray_2r"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="2000"
                android:textColor="@color/main_color"
                android:textSize="@dimen/sp_19"/>
        </FrameLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/pop_cash_minus"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@drawable/information_button_jian_default"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_alignParentLeft="true" />

        <ImageView
            android:id="@+id/pop_cash_add"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:src="@drawable/information_button_jia_default"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />

<!--        <EditText
            android:id="@+id/pop_cash_et"
            android:layout_width="@dimen/dp_240"
            android:layout_height="@dimen/dp_40"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/shape_no_gray_2r"
            android:hint="请输入金额"
            android:paddingLeft="@dimen/dp_6"
            android:textColor="@color/main_title_text_color"
            android:textColorHint="@color/main_assist_text_color" />-->

        <com.pbids.sanqin.component.AmountET
            android:id="@+id/pop_cash_et"
            android:layout_width="@dimen/dp_240"
            android:layout_height="@dimen/dp_40"
            android:layout_centerInParent="true"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/shape_no_gray_2r"
            android:hint="请输入金额"
            android:paddingLeft="@dimen/dp_6"
            android:textColor="@color/main_title_text_color"
            android:textColorHint="@color/main_assist_text_color" />
    </RelativeLayout>

    <Button
        android:id="@+id/pop_cash_bt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_40"
        android:layout_marginLeft="@dimen/dp_40"
        style="?android:attr/borderlessButtonStyle"
        android:background="@drawable/selector_app_comfirm"
        android:text="打赏"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"/>
</LinearLayout>