<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/invite_rule_bg"
    android:padding="@dimen/dp_15">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="邀请规则"
        android:textSize="@dimen/sp_24"
        android:textColor="@color/main_remind_color_aother"
        android:textStyle="bold"
        android:gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/invite_rule_content1"
        android:textSize="@dimen/sp_14"
        android:textColor="#666666"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/invite_rule_content2"
        android:layout_marginTop="@dimen/dp_15"
        android:textSize="@dimen/sp_14"
        android:textColor="#666666"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/invite_rule_content3"
        android:layout_marginTop="@dimen/dp_15"
        android:textSize="@dimen/sp_14"
        android:textColor="#666666"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/invite_rule_content4"
        android:layout_marginTop="@dimen/dp_15"
        android:textSize="@dimen/sp_14"
        android:textColor="#666666"/>

    <Button
        android:id="@+id/invite_rule_dismiss"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_40"
        android:background="@drawable/shape_app_comfirm_press"
        android:text="关闭"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_20"/>
</LinearLayout>
