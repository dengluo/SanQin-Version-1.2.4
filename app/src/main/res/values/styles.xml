<resources xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingTranslation">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WarpLinearLayoutDefault">
           <item name="grivate">left</item>  
           <item name="horizontal_Space">20dp</item>  
           <item name="vertical_Space">20dp</item>  
           <item name="isFull">false</item>  
    </style>

    <declare-styleable name="VerifyCode">
        <attr name="codeTextSize" format="dimension"/>
        <attr name="codeBackground" format="color"/>
        <attr name="codeLength" format="integer"/>
        <attr name="isContainChar" format="boolean"/>
        <attr name="pointNum" format="integer"/>
        <attr name="linNum" format="integer"/>
    </declare-styleable>

    <style name="LoginPopupAnimation" parent="android:Animation" mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/login_popup_enter</item>
        <item name="android:windowExitAnimation">@anim/login_popup_exit</item>
    </style>
    <style name="HpNewsAdPopAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/hp_news_pop_ad_off</item>
        <item name="android:windowExitAnimation">@anim/hp_news_pop_ad_on</item>
    </style>
    <style name="GenealogyCatalog" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/catalog_enter</item>
        <item name="android:windowExitAnimation">@anim/catalog_exit</item>
    </style>

            <declare-styleable name="CircleImageView">
                <attr name="border_width" format="dimension" />
                <attr name="border_color" format="color" />
            </declare-styleable>

    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_checkbox</item>
    </style>

    <style name="progressbar_shape_10r">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_shape_10r</item><!-- progress_horizontal -->
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
    </style>

    <style name="DialogFullScreen" parent="DialogStyle"/>

    <style name="DialogStyle" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <!--<item_zq_choose_group name="android:actionBarSize">@dimen/action_bar_height</item_zq_choose_group>-->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="DialogBottom">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
    
    <style name="pick_dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/dialog_lucency1</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <style name="post_down_dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/white</item><!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    <style name="BgNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item_zq_choose_group name="android:windowBackground">@drawable/kaiqiye_bg</item_zq_choose_group>-->
        <!--<item_zq_choose_group name="android:windowBackground">@color/transparent</item_zq_choose_group>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--<item_zq_choose_group name="android:windowTranslucentStatus">true</item_zq_choose_group>-->
        <!--<item_zq_choose_group name="android:windowTranslucentNavigation">false</item_zq_choose_group>-->
    </style>
    <style name="bgNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item_zq_choose_group name="android:windowBackground">@drawable/kaiqiye_bg</item_zq_choose_group>-->
        <!--<item_zq_choose_group name="android:windowBackground">@color/transparent</item_zq_choose_group>-->
        <item name="android:windowFullscreen">true</item>
        <!--<item_zq_choose_group name="android:windowBackground">@drawable/kaiqiye_bg</item_zq_choose_group>-->
        <!--<item_zq_choose_group name="android:windowTranslucentStatus">true</item_zq_choose_group>-->
        <!--<item_zq_choose_group name="android:windowTranslucentNavigation">false</item_zq_choose_group>-->
    </style>

    <!--文章搜索  历史查询文本样式-->
    <style name="news_search_fragment_history_textview">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_gray_radius_index</item>
        <item name="android:paddingLeft">@dimen/dp_5</item>
        <item name="android:paddingRight">@dimen/dp_5</item>
        <item name="android:paddingTop">@dimen/dp_3</item>
        <item name="android:paddingBottom">@dimen/dp_3</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:textColor">@color/main_assist_text_color</item>
    </style>

    <!--底部弹出PopupWindow-->
    <style name="take_photo_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_exit_anim</item>
    </style>


    <!--弹出窗按钮样式-->
    <style name="superdialog_button"   >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@drawable/selector_app_comfirm</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_19</item>
    </style>

    <!--弹出窗内容样式-->
    <style name="superdialog_title"   >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_15</item>
        <item name="android:layout_marginBottom">@dimen/dp_20</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textColor">@color/main_assist_text_color</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="superdialog_image"   >
        <item name="android:layout_width">@dimen/dp_85</item>
        <item name="android:layout_height">@dimen/dp_85</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <!-- 全局文本 红底白字 -->
    <style name="global_edittext">
        <item name="android:layout_width">@dimen/dp_85</item>
        <item name="android:layout_height">@dimen/dp_85</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:background">@drawable/global_edittext</item>

    </style>

    <!-- 全局按钮 红底白字 -->
    <style name="global_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_app_comfirm</item>
    </style>

    <!-- 族谱 目录 -->
    <style name="genealogy_catalog_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textColor">@color/main_title_text_color</item>
        <item name="android:ems">1</item>
     <!--   <item name="android:background">@drawable/nim_contact_list_item_selecter</item>-->
    </style>

    <!-- 族谱 目录 pop -->
    <style name="genealogy_catalog_pop_item">
        <item name="android:layout_width">@dimen/dp_34</item>
        <item name="android:layout_height">@dimen/dp_104</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/sp_19</item>
        <item name="android:textColor">@color/main_title_text_color</item>
        <item name="android:ems">1</item>
        <item name="android:background">@drawable/catalog_kuang</item>
    </style>

    <!-- text load -->
    <style name="global_text_loading">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/dp_64</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:textColor">@color/main_link_pop_color</item>
    </style>

    <!-- 主tab栏上的红点 -->
    <style name="main_tab_badge">
        <item name="android:layout_width">@dimen/dp_10</item>
        <item name="android:layout_height">@dimen/dp_10</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginTop">@dimen/dp_6</item>
        <item name="android:layout_marginRight">@dimen/dp_6</item>

    </style>

</resources>
